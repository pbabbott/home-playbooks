
defaults:
  sortTags: semver

watch:
  schedule: "0 10 * * *"

providers:
  file:
    directory: "/config"
  dockerfile:
    patterns:
      - ./config/*Dockerfile

notif:
  pushover:
    token: {{ pushover.app_token }}
    recipient: {{ pushover.user_key }}
    templateTitle: "{{ "{{" }} .Entry.Image {{ "}}" }} released"
    templateBody: "Docker tag {{ "{{" }} .Entry.Image {{ "}}" }} has been released"
